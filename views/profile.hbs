<link rel="stylesheet" href="/assets/css/profile.css">
<link rel="stylesheet" href="/assets/css/projects-horizontal.css">

<main>
    <div href="/assets/css/Profile.css" class="container bootstrap snippets" style="margin-top:2%">
        <div class="row" id="user-profile">
            {{#with user}}
            <div class="col-lg-3 col-md-4 col-sm-4">
                <div class="main-box clearfix">
                    <h2>{{name}}</h2>
                    <img src="#" class="profile-img img-responsive center-block">
                    <div class="profile-label">
                        <span class="label label-danger">{{priviledge}}</span>
                    </div>

                    <div class="profile-stars">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-o"></i>
                        <span>{{rating}}</span>
                    </div>

                    <div class="profile-details">
                        <ul class="fa-ul">
                            <li><i class="fa-li fa fa-cubes"></i>Sales: <span>{{sales}}</span></li>
                            <li><i class="fa-li fa fa-gavel"></i>Auctions: <span>{{auctions}}</span></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-lg-9 col-md-8 col-sm-8">
                <div class="main-box clearfix">
                    <div class="profile-header">
                        <h3><span>User info</span></h3>
                    </div>

                    <div class="row profile-user-info">
                        <div class="col-sm-8">
                            <div class="profile-user-details clearfix">
                                <div class="profile-user-details-label">
                                    Full Name:
                                </div>
                                <div class="profile-user-details-value">
                                    {{name}}
                                </div>
                                <button type="button" class="btn btn-primary edit-profile" data-toggle="modal"
                                data-target="#fullnameModal"><i class="fa fa-pencil-square fa-lg"></i></button>
                                <div class="modal fade" id="nameModal" role="dialog">
                                    <div class="modal-dialog">
                                        <!-- Modal content-->
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h4 class="modal-title">Edit user name</h4>
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            </div>
                                            <div class="modal-body">
                                                New name:<br>
                                                <input class="inputnewname" type="text" name="username"><br>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Save</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="profile-user-details clearfix">
                                <div class="profile-user-details-label">
                                    Email:
                                </div>
                                <div class="profile-user-details-value">
                                    {{email}}
                                </div>
                                <button type="button" class="btn btn-primary edit-profile" data-toggle="modal"
                                data-target="#emailModal"><i class="fa fa-pencil-square fa-lg"></i></button>
                                <div class="modal fade" id="nameModal" role="dialog">
                                    <div class="modal-dialog">
                                        <!-- Modal content-->
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h4 class="modal-title">Edit email</h4>
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            </div>
                                            <div class="modal-body">
                                                New email:<br>
                                                <input class="inputnewname" type="text" name="username"><br>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Save</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="profile-user-details clearfix">
                                <div class="profile-user-details-label">
                                    Birthday:
                                </div>
                                <div class="profile-user-details-value">
                                    {{dob}}
                                </div>
                                <button type="button" class="btn btn-primary edit-profile" data-toggle="modal"
                                data-target="#fullnameModal"><i class="fa fa-pencil-square fa-lg"></i></button>
                                <div class="modal fade" id="nameModal" role="dialog">
                                    <div class="modal-dialog">
                                        <!-- Modal content-->
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h4 class="modal-title">Edit birthday</h4>
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            </div>
                                            <div class="modal-body">
                                                Start date:<br>
                                                <input type="date" id="dobInput" name="trip-start">
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Save</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="profile-user-details clearfix">
                                <div class="profile-user-details-label">
                                    Address:
                                </div>
                                <div class="profile-user-details-value">
                                    {{address}}
                                </div>
                            </div>
                        </div>
                        <div style="margin-top:2%; margin-left:2%;margin-right:2%">
                            <ul class="nav nav-tabs">
                                <li class="nav-item"><a class="nav-link active" role="tab" data-toggle="tab"
                                        href="#tab-1">Watchlist</a></li>
                                <li class="nav-item"><a class="nav-link" role="tab" data-toggle="tab"
                                        href="#tab-2">Participating Auctions</a></li>
                                <li class="nav-item"><a class="nav-link" role="tab" data-toggle="tab" href="#tab-3">Won
                                        Auctions</a></li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" role="tabpanel" id="tab-1">
                                    <div class="projects-horizontal">
                                        <div class="container">
                                            <div id="watchList" class="row projects">
                                                {{#each this.bid}}
                                                <div class="col-4 col-sm-3 col-lg-2 product">
                                                    <a href="/detail/{{id}}">
                                                        <img src="{{image}}" class="rounded img-fluid m-1" alt="image">
                                                        <h5 class="text-center">{{name}} {{{new start}}} {{#unless (equal status "bidding")}} <b>({{status}})</b> {{/unless}}</h5>
                                                        {{#if info }}
                                                            <p class="text-center m-0">{{{masked info}}}</p>
                                                        {{else}}
                                                            <p class="text-center m-0">&nbsp; &nbsp;</p>
                                                        {{/if}}                   
                                                        <div class="clearfix">
                                                            <p class="float-left m-0">{{cap}}$</p>
                                                            <p class="float-right m-0">{{bids}} Bids</p>
                                                        </div>
                                                        <div class="clearfix">
                                                            <p class="float-left m-0">{{{time start}}}</p>
                                                            <p class="float-right text-danger m-0">{{{remain end}}}</p>
                                                        </div>
                                                        <p class="text-center text-info font-weight-bold">{{current}}$</p>
                                                    </a>
                                                </div>
                                                {{/each}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" role="tabpanel" id="tab-2">
                                    <div class="projects-horizontal">
                                        <div class="container">
                                            <div id="participatingAuctions" class="row projects">
                                                {{#each this.bid}}
                                                <div class="col-4 col-sm-3 col-lg-2 product">
                                                    <a href="/detail/{{id}}">
                                                        <img src="{{image}}" class="rounded img-fluid m-1" alt="image">
                                                        <h5 class="text-center">{{name}} {{{new start}}} {{#unless (equal status "bidding")}} <b>({{status}})</b> {{/unless}}</h5>
                                                        {{#if info }}
                                                            <p class="text-center m-0">{{{masked info}}}</p>
                                                        {{else}}
                                                            <p class="text-center m-0">&nbsp; &nbsp;</p>
                                                        {{/if}}                   
                                                        <div class="clearfix">
                                                            <p class="float-left m-0">{{cap}}$</p>
                                                            <p class="float-right m-0">{{bids}} Bids</p>
                                                        </div>
                                                        <div class="clearfix">
                                                            <p class="float-left m-0">{{{time start}}}</p>
                                                            <p class="float-right text-danger m-0">{{{remain end}}}</p>
                                                        </div>
                                                        <p class="text-center text-info font-weight-bold">{{current}}$</p>
                                                    </a>
                                                </div>
                                                {{/each}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" role="tabpanel" id="wonAuctions">
                                    <div class="projects-horizontal">
                                        <div class="container">
                                            <div id="wonAuctions" class="row projects">
                                                {{#each this.end}}
                                                <div class="col-4 col-sm-3 col-lg-2 product">
                                                    <a href="/detail/{{id}}">
                                                        <img src="{{image}}" class="rounded img-fluid m-1" alt="image">
                                                        <h5 class="text-center">{{name}} {{{new start}}}{{#unless (equal status "bidding")}} <b>({{status}})</b> {{/unless}}</i></h5>
                                                        <p class="text-center m-0">{{{masked info}}}</p>
                                                        <div class="clearfix">
                                                            <p class="float-left m-0">{{cap}}$</p>
                                                            <p class="float-right m-0">{{bids}} Bids</p>
                                                        </div>
                                                        <div class="clearfix">
                                                            <p class="float-left m-0">{{{time start}}}</p>
                                                            <p class="float-right text-danger m-0">{{{remain end}}}</p>
                                                        </div>
                                                        <p class="text-center text-info font-weight-bold">{{current}}$</p>
                                                    </a>
                                                </div>
                                                {{/each}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/with}}
        </div>
    </div>
</main>
<script src="./assets/js/Profile-Edit-Form.js"></script>
<script src="./assets/js/bidderViewList.js"></script>