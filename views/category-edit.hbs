
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link rel="stylesheet" href="/assets/css/category.css">
<main>
        <form style="padding: 30px; background-color: rgba(220, 230, 233, 0.466); margin: 30px;" method="POST" action="">
        <h4>Category Infomation</h4>

        <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Name</label>
                    <input  class="form-control" id="txtCatName" name="txtCatName" type="text" value="{{category.name}}" autofocus>
                </div>
                <div class="form-group col-md-6">
                    <label >Parent Category</label>
                    <select class="form-control" type="text" id="txtCatPar" name="txtCatPar">
                        <option value={{this.parent.id}}>{{this.parent.name}}</option>
                        {{#each categories}}
                            <option value={{id}}>{{name}}</option>
                        {{/each}}
                    </select>
                </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label>ID</label>
                <input  class="form-control" id="txtCatId" name="txtCatId" value={{this.category.id}} readonly>
            </div>

            <div class="form-group col-md-6">
                <label>Quantity</label>
                <input  class="form-control" id="txtPro" readonly value={{this.quantity}}>
            </div>
        </div>

        <a role="button" href="/admin/category" class="btn btn-outline-success" >Back
            <i class="fa fa-backward" aria-hidden="true"></i>
        </a>
        <button type="submit" class="btn btn-outline-primary">Save
            <i class="fa fa-save" aria-hidden="true"></i>
        </button>
    </form>