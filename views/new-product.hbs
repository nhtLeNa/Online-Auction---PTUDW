<link rel="stylesheet" href="/public/assets/css/profile.css">
<link href='https://cdn.jsdelivr.net/npm/froala-editor@3.0.6/css/froala_editor.pkgd.min.css' rel='stylesheet'
    type='text/css' />

<main>
    <div style="margin-left:5%; margin-right:5%; margin-top:2%">
        <div>
            <div class="container-fluid">
                <h1>New Product</h1>
                <hr />
                <label for="exampleFormControlSelect1" style="padding-top: 10px;">Parent Select</label>
                <select class="form-control" type="text" id="productCategory" name="">
                    <option value='-1'>null</option>
                    {{#each category}}
                        <option value={{id}}>{{name}}</option>
                    {{/each}}
                </select>
                <form method="POST" enctype="multipart/form-data" id="contactForm"><input class="form-control"
                        type="hidden" name="Introduction" value="This email was sent from www.awebsite.com" /><input
                        class="form-control" type="hidden" name="subject" value="Awebsite.com Contact Form" /><input
                        class="form-control" type="hidden" name="to" value="email@awebsite.com" />
                    <div class="form-row">
                        <div class="col-md-6">
                            <div id="successfail"></div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-12 col-md-6" id="message">
                            <h2 class="h4"><i class="fa fa-envelope"></i>Product details<small><small
                                        class="required-input"> (*required)</small></small>
                            </h2>
                            <div class="form-group"><label for="from-name">Name</label><span
                                    class="required-input">*</span>
                                <div class="input-group">
                                    <div class="input-group-prepend"><span class="input-group-text"><i
                                                class="fa fa-user-o"></i></span></div><input class="form-control"
                                        type="text" name="name" required placeholder="Product Name" id="name" />
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-12 col-sm-6 col-md-12 col-lg-6">
                                    <div class="form-group"><label for="from-phone">Starting price</label><span
                                            class="required-input">*</span>
                                        <div class="input-group">
                                            <div class="input-group-prepend"><span class="input-group-text"><i
                                                        class="fa fa-phone"></i></span></div><input class="form-control"
                                                type="text" name="start" required placeholder="ex: 100,000"
                                                id="startTxt" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6 col-md-12 col-lg-6">
                                    <div class="form-group"><label for="from-phone">Increment</label><span
                                            class="required-input">*</span>
                                        <div class="input-group">
                                            <div class="input-group-prepend"><span class="input-group-text"><i
                                                        class="fa fa-phone"></i></span></div><input class="form-control"
                                                type="text" name="increment" required placeholder="ex: 500"
                                                id="incrementTxt" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-12 col-sm-6 col-md-12 col-lg-6">
                                    <div class="form-group"><label for="from-phone">Reservation price</label><span>
                                            (optional)</span>
                                        <div class="input-group">
                                            <div class="input-group-prepend"><span class="input-group-text"><i
                                                        class="fa fa-phone"></i></span></div><input class="form-control"
                                                type="text" name="reserved" placeholder="Price to buy instantly"
                                                id="reserved" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group"><label for="from-comments">Description:</label>
                                <div id="editor">
                                    <textarea id="description" style='margin-top:30px;'>
                                    </textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-row">
                                    <div class="col"><button class="btn btn-primary btn-block" type="reset"><i
                                                class="fa fa-undo"></i>Reset</button></div>
                                    <div class="col"><button class="btn btn-primary btn-block" type="submit">Submit<i
                                                class="fa fa-chevron-circle-right"></i></button></div>
                                </div>
                            </div>
                            <hr class="d-flex d-md-none" />
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="from-comments">Image(s):</label>
                            <div id="imageupload" class="file-loading" style='margin-top:30px;'>
                                <input id="fileInput" name="fileInput", type="file" multiple/>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

<script type="text/javascript"
    src='https://cdn.jsdelivr.net/npm/froala-editor@3.0.6/js/froala_editor.pkgd.min.js'></script>
<script>
    var editor = new FroalaEditor('#description');
</script>