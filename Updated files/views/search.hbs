<main>
  <ul class="list-group list-group-horizontal ml-2">
    <li><a class="text-primary" href="/"><small>Home</small></a></li>
    {{#if prepath}}
    <li> <a class="text-primary" href="/search/category/{{prepath.id}}"><small>&gt; {{prepath.name}}</small></a></li>
    {{/if}}
    {{#if path}}
    <li> <a class="text-primary" href="/search/category/{{path.id}}"><small>&gt; {{path.name}}</small></a></li>
    {{else}}
    <li> <a><small>&gt; Results</small></a></li>
    {{/if}}
  </ul>

  <hr style="margin: 3px;border: 0.5px solid gray;margin-bottom: 5px;">

  <nav class="row navbar-expand-md navbar-light m-0 p-0">
    <div class="navbar-collapse collapse col-md-2 col-12" style="height: fit-content;" id="navbarFilter">
      <ul class="nav flex-column">
        <li class="nav-item">
          <div class="filter">
            <h5>Price</h5>
            <div>
              <form>
                <input class="col-4" type="text">
                $ -
                <input class="col-4" type="text">
                $
              </form>
            </div>
          </div>
        </li>
        <li class="nav-item">
          <div class="filter">
            <h5>Buying Format</h5>
            <div class="content">
              <form>
                <div class="radio">
                  <input type="radio" name="optradio" checked>
                  <label>All Listings</label>
                </div>
                <div class="radio">
                  <input type="radio" name="optradio">
                  <label>Accepts Offers</label>
                </div>
                <div class="radio">
                  <input type="radio" name="optradio">
                  <label>Auction</label>
                </div>
                <div class="radio">
                  <input type="radio" name="optradio">
                  <label>Buy It Now</label>
                </div>
                <div class="radio">
                  <input type="radio" name="optradio">
                  <label>Classified Ads</label>
                </div>
              </form>
            </div>
          </div>
        </li>
        <li class="nav-item">
          <div class="filter">
            <h5>Location</h5>
            <div class="content">
              <form>
                <div class="radio">
                  <input type="radio" name="optradio" checked>
                  <label>All Locations</label>
                </div>
                <div class="radio">
                  <input type="radio" name="optradio">
                  <label>Vegeta</label>
                </div>
                <div class="radio">
                  <input type="radio" name="optradio">
                  <label>Runeterra</label>
                </div>
                <div class="radio">
                  <input type="radio" name="optradio">
                  <label>Gourmet</label>
                </div>
                <div class="radio">
                  <input type="radio" name="optradio">
                  <label>Azeroth</label>
                </div>
              </form>
            </div>
          </div>
        </li>
        <li class="nav-item">
          <div class="filter">
            <h5>Delivery Options</h5>
            <div class="content">
              <form>
                <div class="checkbox">
                  <input type="checkbox" name="optradio" checked>
                  <label>Free International Shipping</label>
                </div>
                <div class="checkbox">
                  <input type="checkbox" name="optradio">
                  <label>Ocean Shipping</label>
                </div>
                <div class="checkbox">
                  <input type="checkbox" name="optradio">
                  <label>Sky Shipping</label>
                </div>
                <div class="checkbox">
                  <input type="checkbox" name="optradio">
                  <label>Galaxy Shipping</label>
                </div>
                <div class="checkbox">
                  <input type="checkbox" name="optradio">
                  <label>Cosmos Shipping</label>
                </div>
              </form>
            </div>
          </div>
        </li>
        <li class="nav-item">
          <div class="filter">
            <h5>Show Only</h5>
            <div class="content">
              <form>
                <div class="checkbox">
                  <input type="checkbox" name="optradio" checked>
                  <label>Free Returns</label>
                </div>
                <div class="checkbox">
                  <input type="checkbox" name="optradio">
                  <label>Returns Accepted</label>
                </div>
                <div class="checkbox">
                  <input type="checkbox" name="optradio">
                  <label>Authorized Seller</label>
                </div>
                <div class="checkbox">
                  <input type="checkbox" name="optradio">
                  <label>Completed Items</label>
                </div>
                <div class="checkbox">
                  <input type="checkbox" name="optradio">
                  <label>Sold Items</label>
                </div>
                <div class="checkbox">
                  <input type="checkbox" name="optradio">
                  <label>Deals & Savings</label>
                </div>
                <div class="checkbox">
                  <input type="checkbox" name="optradio">
                  <label>Sale Items</label>
                </div>
                <div class="checkbox">
                  <input type="checkbox" name="optradio">
                  <label>Listed as Lots</label>
                </div>
                <div class="checkbox">
                  <input type="checkbox" name="optradio">
                  <label>Search in Description</label>
                </div>
                <div class="checkbox">
                  <input type="checkbox" name="optradio">
                  <label>Benefits Charity</label>
                </div>
                <div class="checkbox">
                  <input type="checkbox" name="optradio">
                  <label>Authenticity Verified</label>
                </div>
              </form>
            </div>
          </div>
        </li>
      </ul>
    </div>

    <div class="col-12 col-md-10 border border-dark p-0">
      <div class="clearfix">
        <button class="navbar-toggler navbar-toggler-right border border-dark" type="button" data-toggle="collapse"
          data-target="#navbarFilter" aria-controls="navbarFilter" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon small"></span>
        </button>

        <select class="float-right" onchange="Sort()" id="order">
          <option value="5">Price</option>
          <option value="4">Time Remain</option>
        </select>
      </div>

      <hr class="m-0 border border-secondary">

      <div class="row m-0 page">
        {{#each product}}
        <div class="col-4 col-sm-3 col-lg-2 product">
          <a href="/detail/{{id}}">
            <img src="{{image}}" class="rounded img-fluid m-1" alt="image">
            <h5 class="text-center">{{name}} {{{new start}}} {{#unless (equal status "bidding")}} <b>({{status}})</b> {{/unless}}</h5>
            {{#if info}}
            <p class="text-center m-0">{{info}}</p>
            {{else}}
            <p class="text-center m-0">&nbsp; &nbsp;</p>
            {{/if}}

            <div class="clearfix">
              <p class="float-left m-0">{{cap}}$</p>
              <p class="float-right m-0">{{bids}} Bids</p>
            </div>
            <div class="clearfix">
              <p class="float-left m-0">{{{time start}}}</p>
              <p class="float-right text-danger m-0">{{{remain end}}}</p>
            </div>
            <p class="text-center text-info font-weight-bold">{{current}}$</p>
          </a>
        </div>
        {{/each}}
      </div>
      {{#each pages}}
      <div class="row m-0 page"></div>
      {{/each}}
    </div>
  </nav>

  <nav class="row navbar-expand-md navbar-light m-0 p-0">
    <div class="navbar-collapse collapse col-md-2 col-12" style="height: fit-content;" id="navbarFilter">
    </div>

    <div class="col-12 col-md-10 border border-dark p-0">
      <ul class="pagination justify-content-center m-0">
        <li class="page-item">
          <a class="page-link"><span>&laquo;</span></a>
        </li>
        {{#each pages}}
        <li class="page-item"><a class="page-link">{{value}}</a></li>
        {{/each}}
        <li class="page-item"><a class="page-link last-page"></a></li>
        <li class="page-item">
          <a class="page-link"><span>&raquo;</span></a>
        </li>
      </ul>
    </div>
  </nav>
  <p class="d-none" id="offset">{{offset}}</p>
</main>

<script src="/assets/js/Sort.js"></script>
<script src="/assets/js/Pagination.js"></script>